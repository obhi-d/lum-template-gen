<idea-plugin>
    <id>org.lumiere.lum-object-creator</id>
    <name>Lumiere!</name>
    <vendor email="obi.de.online@gmail.com" url="http://www.github.com">Lumiere</vendor>

    <description>Lumiere object creator from template files</description>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="org.intellij.sdk.settings.AppSettingsState"/>
        <applicationConfigurable parentId="tools" instance="org.intellij.sdk.settings.AppSettingsConfigurable"
                                 id="org.intellij.sdk.settings.AppSettingsConfigurable"
                                 displayName="Lumiere Settings"/>
        <toolWindow id="Lumiere"
                    anchor="bottom"
                    factoryClass="org.intellij.sdk.toolwindow.PluginLog"></toolWindow>
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="CreateLumiereAction" class="CreateAction" text="Lumiere" icon="CreateActionIcons.CREATE_ACTION">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="first"/>
        </action>
    </actions>
</idea-plugin>