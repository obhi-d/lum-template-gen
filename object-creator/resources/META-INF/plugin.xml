<idea-plugin>
  <id>com.your.company.unique.plugin.id</id>
  <name>Lumiere!</name>
  <version>1.3</version>
  <vendor email="obi.de.online@gmail.com" url="http://www.github.com">Lumiere</vendor>

  <description><![CDATA[
      Lumiere object creator from template files
    ]]></description>

  <change-notes><![CDATA[
      Fix plugin build
    ]]>
  </change-notes>

  <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="173.0"/>

  <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <depends>com.intellij.modules.platform</depends>

  <extensions defaultExtensionNs="com.intellij">
    <applicationService serviceImplementation="org.intellij.sdk.settings.AppSettingsState"/>
    <applicationConfigurable parentId="tools" instance="org.intellij.sdk.settings.AppSettingsConfigurable"
                             id="org.intellij.sdk.settings.AppSettingsConfigurable"
                             displayName="Lumiere Settings"/>
    <toolWindow id="Lumiere"
                anchor="bottom"
                factoryClass="org.intellij.sdk.toolwindow.PluginLog"/>
  </extensions>

  <actions>
    <!-- Add your actions here -->
    <action id="CreateLumiereAction" class="main.java.CreateAction" text="Lumiere" icon="/actions/intentionBulb.svg">
      <add-to-group group-id="ProjectViewPopupMenu" anchor="first"/>
    </action>
  </actions>

</idea-plugin>